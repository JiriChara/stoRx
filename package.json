{
  "name": "Gringotts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:commonjs",
    "build:commonjs": "webpack",
    "clean": " ",
    "doc": "mkdirp esdoc && esdoc -c esdoc.json",
    "lint": "eslint src test examples",
    "report": "npm run cover && nyc report --reporter=lcov && codecov",
    "test": "NODE_ENV=test mocha -r ts-node/register test/**/*.ts --bail",
    "cover": "NODE_ENV=test nyc npm t",
    "prepublish": "npm run clean && npm run report && npm run build && npm run doc"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.14",
    "chai": "^4.1.0",
    "chromedriver": "^2.30.1",
    "codecov": "^2.2.0",
    "esdoc": "^0.5.2",
    "istanbul-reports": "^1.1.1",
    "mkdirp": "^0.5.1",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "ts-helper": "^0.0.1",
    "ts-loader": "^2.3.0",
    "ts-node": "^3.2.1",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0"
  },
  "dependencies": {
    "rxjs": "^5.4.2"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  }
}
