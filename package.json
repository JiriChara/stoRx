{
  "name": "Gringotts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:commonjs",
    "build:commonjs": "webpack",
    "clean": " ",
    "doc": "mkdirp esdoc && esdoc -c esdoc.json",
    "lint": "eslint src test examples",
    "report": "npm run test && nyc report --reporter=lcov",
    "test:unit": "tsc --outDir dist/test && nyc ava",
    "test": "npm run test:unit",
    "prepublish": "npm run clean && npm run report && npm run build && npm run doc"
  },
  "devDependencies": {
    "@types/node": "^8.0.14",
    "ava": "^0.21.0",
    "chromedriver": "^2.30.1",
    "esdoc": "^0.5.2",
    "mkdirp": "^0.5.1",
    "nyc": "^11.0.3",
    "ts-helper": "^0.0.1",
    "ts-loader": "^2.3.0",
    "ts-node": "^3.2.1",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0"
  },
  "dependencies": {
    "rxjs": "^5.4.2"
  },
  "ava": {
    "files": [
      "dist/test/test/unit/**/*.spec.js"
    ],
    "source": [
      "dist/test/src/**/*.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": false,
    "powerAssert": false,
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  }
}
